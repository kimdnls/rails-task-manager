<div class="form-check">

  <% @tasks.each do |task| %>
   <div>
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault"> </label>
      <%= link_to task.title, task_path(task) %>
    </div>
  <% end %>

</div>

